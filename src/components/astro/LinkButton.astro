---
export interface Props {
  text: string
  link: string
  ariaLabel?: string
}

const { text, link, ariaLabel } = Astro.props
---

<button class="button">
  <a href={link} aria-label={ariaLabel}>{text}</a>
</button>

<style lang="scss">
  @import '@/styles/_variables.scss';
  .button {
    background-color: map-get($map: $bg-colors, $key: 'white');
    border: 2px solid map-get($map: $button-colors, $key: 'primary');
    border-radius: 3px;
    color: map-get($map: $button-colors, $key: 'primary');
    width: 100%;
    transition: background-color 0.3s;

    &:hover {
      background-color: map-get($map: $bg-colors, $key: 'light-blue');
    }

    & > a {
      display: block;
      width: 100%;
      padding: 20px 0;
      color: inherit;
    }
  }
</style>
