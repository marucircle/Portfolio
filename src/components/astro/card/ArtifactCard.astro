---
import type { ArtifactDocument } from '@/types/prismic'

export interface Props {
  artifact: ArtifactDocument
}

const { artifact } = Astro.props
---

<a href={artifact.data.link.url}>
  <article class="card">
    <img src={artifact.data.thumbnail.url} alt="成果物のイメージ画像" class="card-image" />
    <div class="card-content">
      <h1 class="card-title">{artifact.data.name}</h1>
      <p class="card-description">{artifact.data.description}</p>
    </div>
  </article>
</a>

<style lang="scss">
  @import '@/styles/_variables.scss';
  .card {
    padding: 15px;
    display: grid;
    grid-template-rows: max-content 1fr;
    border-radius: 5px;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    background-color: map-get($map: $bg-colors, $key: 'dark-grey');
    &-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      box-shadow: rgba(0, 0, 0, 0.05) 0px 0px 0px 1px, rgb(209, 213, 219) 0px 0px 0px 1px inset;
      border-radius: 5px;
    }

    &-content {
      margin: 15px 0;
    }

    &-title {
      font-size: map-get($map: $font-sizes, $key: 'heading3');
      color: map-get($map: $text-colors, $key: 'primary');
      display: -webkit-box;
      height: 55px;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: break-spaces;
      color: map-get($map: $text-colors, $key: 'white');
      @include sp {
        font-size: map-get($map: $font-sizes, $key: 'heading4');
        height: 58px;
      }
    }

    &-description {
      margin-top: 10px;
      font-size: map-get($map: $font-sizes, $key: 'heading5');
      display: -webkit-box;
      height: 67.5px;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 3;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: break-spaces;
      color: map-get($map: $text-colors, $key: 'white');
      @include sp {
        font-size: map-get($map: $font-sizes, $key: 'text');
        height: 57px;
      }
    }
  }
</style>
