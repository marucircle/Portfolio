---
import LinkButton from '../components/LinkButton.astro'
---

<section>
  <header class="profile-heading">
    <h1 class="profile-heading-title">Profile</h1>
    <h3 class="profile-heading-description">Who Are You?</h3>
  </header>
  <div class="profile">
    <img class="profile-image" src="face.jpeg" />
    <div class="profile-info">
      <div>
        <p class="profile-info-my-name">maru (まる)</p>
      </div>
      <ul class="profile-info-description-list">
        <li class="profile-info-description">Frontend Developer</li>
        <li class="profile-info-descriotion">Rhythm Game Nerd</li>
        <li class="profile-info-descriotion">Can't understand English...</li>
      </ul>
    </div>
  </div>
  <footer class="profile-footer">
    <LinkButton text="Read More!" />
  </footer>
</section>

<style lang="scss">
  @import '../styles/_variables.scss';
  .profile {
    margin: 64px 10%;
    display: flex;
    grid-column-gap: 20px;
    align-items: center;
    align-content: center;
    justify-content: space-around;
    &-image {
      width: 25%;
      height: auto;
      border-radius: 50%;
    }

    &-heading {
      &-title {
        font-size: map-get($map: $font-sizes, $key: 'title');
        text-align: center;
      }

      &-description {
        text-align: center;
        font-size: map-get($map: $font-sizes, $key: 'heading4');
        font-weight: 300;
        color: #555555;
      }
    }

    &-info {
      &-my-name {
        font-size: map-get($map: $font-sizes, $key: 'heading1');
        font-weight: bold;
      }
      &-description {
        &-list {
          display: flex;
          flex-direction: column;
          row-gap: 10px;
          padding: 10px 15px;
          margin-top: 10px;
          border-left: 5px solid #555555;
          list-style: none;
        }
      }
    }

    &-footer {
      margin: 0 120px;
    }
  }
</style>
